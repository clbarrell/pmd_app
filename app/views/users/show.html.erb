<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1><%= @user.name %></h1>
    <p>
      Email: <%= @user.email %>
    </p>
    <p>
      Initials: <%= @user.initials %>
    </p>
    <% if @user.admin? %>
      <p>You are an admin user. </p>
    <% else %>
      <p>You are not an admin. </p>
    <% end %>
  </div>
  <div class="col-md-4"></div>

</div>
