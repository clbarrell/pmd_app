<%= semantic_form_for @client do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.inputs do %>
      <%= f.input :name%>
      <%= f.input :organisation, :hint => "Only select if client is part of larger organisation" %>
    <% end %>

    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-default" } %>
    <% end %>

<% end %>