
<%= semantic_form_for @contact do |f| %>
  <%= f.inputs do %>
  <div class="form-group">
    <%= f.input :name, label: 'Contact Name', :input_html => { :class => 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :client, label: 'Contact Organisation', :input_html => { :class => 'select_input form-control' } %>
  </div>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :button_html => { :class => "btn btn-default" } %>
  <% end %>
<% end %>