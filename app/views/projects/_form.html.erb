<%= semantic_form_for @project do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.inputs do %>
    <%= f.input :name, :label => "Name" %>
    <%= f.input :total, :label => "Estimated Total ($)", :prepend => '$'  %>
    <%= f.input :probability, :label => "Probability (%)", :prepend => '%', :input_html => { :min => 0, :max => 100 }  %>
    <%= f.input :service_line, :label => "Service Line", :as => :radio   , :collection => %w[Transformation Leadership Performance Wellbeing] %>
    <%= f.input :status, :label => "Project Status", :as => :radio    , :collection => %w[Active Complete Delayed Inactive] %>
    <%= f.input :project_type, :label => "Project Type", :as => :radio, :collection => %w[Proposal Guaranteed] %>
    <%= f.input :suitable_reference, :label => "  Suitable Reference?" %>
    <%= f.input :client, :label => "Client Organisation", :prepend => '<span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>'.html_safe %>
    <%= f.input :contact, :label => "Contact", :prepend => '<span class="glyphicon glyphicon-user" aria-hidden="true"></span>'.html_safe %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :button_html => { :class => "btn btn-success btn-block" } %>
  <% end %>

<% end %>