<div class="container">
  <!-- Heading  -->
  <div class="row">
    <h1>Project</h1>
  </div>
  <div class="row">
    <!-- Aside link section -->
    <%= render 'linkaside' %>
    <!-- project panel side -->
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-default" id="project-panel">
        <div class="panel-heading">
          <div class="panel-title">
            <h3><%= @project.name %></h3>
          </div>
        </div>
        <div class="panel-body">
          <% if @project.status == "Active" %>
            <span class="bg-success pull-right text-uppercase" id="project-status">Active</span>
          <% elsif @project.status == "Complete" %>
            <span class="bg-primary pull-right text-uppercase" id="project-status" style="color:white;">Complete</span>
          <% elsif @project.status == "Delayed" %>
            <span class="bg-warning pull-right text-uppercase" id="project-status">Delayed</span>
          <% elsif @project.status == "Inactive" %>
            <span class="bg-danger pull-right text-uppercase" id="project-status">Inactive</span>
          <% end %>
          <p><strong><%= @project.client.name %></strong>
            <br> <%= @project.contact.name %>
          </p>
          <div class="pull-left">
            <p><%= @project.project_type %></p>
            <p><%= @project.service_line %></p>
          </div>
          <div class="pull-right project-right">
            <p><%= @project.total.to_s(:currency) %></p>
            <p><%= @project.probability.to_s(:percentage, precision: 0) %> Probability</p>
          </div>
          <div class="clearfix">
            <p><%= good_reference(@project) %></p>
          </div>
          <div class="pull-left">
            <p>Last Updated:</p>
            <p>Created:</p>
          </div>
          <div class="pull-right project-right">
            <p><%= @project.updated_at.time.to_date.to_formatted_s(:long)  %></p>
            <p><%= @project.created_at.to_date.to_formatted_s(:long)  %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Splits Side -->
    <%= render 'project_splits/splits' %>
    <!-- end splits side -->
  </div>
</div>