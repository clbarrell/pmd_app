<div class="container">
  <!-- Heading  -->
  <div class="row">
    <h1>Project</h1>
  </div>
  <div class="row">
    <!-- Aside link section -->
    <%= render 'linkaside' %>
    <!-- project panel side -->
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-default" id="project-panel">
        <div class="panel-heading">
          <div class="panel-title">
            <h3><%= @project.name %></h3>
          </div>
        </div>
        <div class="panel-body">
          <span class="bg-success pull-right text-uppercase" id="project-status">Active</span>
          <p><strong><%= @project.client.name %></strong>
            <br> <%= @project.contact.name %>
          </p>
          <div class="pull-left">
            <p><%= @project.project_type %></p>
            <p><%= @project.service_line %></p>
          </div>
          <div class="pull-right">
            <p>$<%= @project.total %></p>
            <p><%= @project.probability %></p>
          </div>
          <div class="clearfix">
            <p><%= good_reference(@project) %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Splits Side -->
    <%= render 'project_splits/splits' %>
    <!-- end splits side -->
  </div>
</div>